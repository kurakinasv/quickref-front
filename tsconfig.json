{
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module": "ES6",
        "target": "ES6",
        "isolatedModules": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "src/",
        "paths": { 
 		    "@components/*": ["components/*"],
 		    "@config/*": ["config/*"],
 		    "@hooks/*": ["hooks/*"],
 		    "@img/*": ["img/*"],
 		    "@pages/*": ["pages/*"],
 		    "@stores/*": ["stores/*"],
			"@styles/*": ["styles/*"],
			"@types/*": ["types/*"],
			"@utils/*": ["utils/*"],
		},
        "useDefineForClassFields": true,
    },
    
    "include": ["src/**/*", "declaration.d.ts"],
    "exclude": ["node_modules"]
}